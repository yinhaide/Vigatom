<?xml version="1.0" encoding="utf-8"?>
<com.tencent.vigatom.ue.layout.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_isPreviewVertical="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/vigatom_cl_white">

    <ImageView
        android:id="@+id/title_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/vigatom" />

    <com.tencent.vigatom.ue.layout.PercentLinearLayout
        android:id="@+id/top_ll"
        android:background="#A5000000"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tencent.vigatom.ue.layout.PercentLinearLayout
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vigatom_round_pd10"
                android:textColor="@color/vigatom_cl_white"
                android:text="吐司" />

            <Button
                app:layout_marginTopPercent="3%h"
                android:id="@+id/bt_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vigatom_round_pd10"
                android:textColor="@color/vigatom_cl_white"
                android:text="进度加载框" />

            <Button
                app:layout_marginTopPercent="3%h"
                android:id="@+id/bt_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vigatom_round_pd10"
                android:textColor="@color/vigatom_cl_white"
                android:text="对话框" />

            <Button
                app:layout_marginTopPercent="3%h"
                android:id="@+id/bt_leak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vigatom_round_pd10"
                android:textColor="@color/vigatom_cl_white"
                android:text="内存泄漏" />

            <Button
                app:layout_marginTopPercent="3%h"
                android:id="@+id/bt_fluent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vigatom_round_pd10"
                android:textColor="@color/vigatom_cl_white"
                android:text="卡顿检测" />

            <Button
                app:layout_marginTopPercent="3%h"
                android:id="@+id/bt_precent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vigatom_round_pd10"
                android:textColor="@color/vigatom_cl_white"
                android:text="百分比布局" />

        </com.tencent.vigatom.ue.layout.PercentLinearLayout>

        <com.tencent.vigatom.ue.layout.PercentLinearLayout
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_statusbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vigatom_round_pd10"
                android:textColor="@color/vigatom_cl_white"
                android:text="状态栏" />

            <Button
                app:layout_marginTopPercent="3%h"
                android:id="@+id/bt_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vigatom_round_pd10"
                android:textColor="@color/vigatom_cl_white"
                android:text="按键导航" />

            <Button
                app:layout_marginTopPercent="3%h"
                android:id="@+id/bt_router"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vigatom_round_pd10"
                android:textColor="@color/vigatom_cl_white"
                android:text="路由跳转" />

            <Button
                app:layout_marginTopPercent="3%h"
                android:id="@+id/bt_crash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vigatom_round_pd10"
                android:textColor="@color/vigatom_cl_white"
                android:text="崩溃显示" />

            <Button
                app:layout_marginTopPercent="3%h"
                android:id="@+id/bt_presentation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vigatom_round_pd10"
                android:textColor="@color/vigatom_cl_white"
                android:text="副屏显示" />

        </com.tencent.vigatom.ue.layout.PercentLinearLayout>

    </com.tencent.vigatom.ue.layout.PercentLinearLayout>

</com.tencent.vigatom.ue.layout.PercentRelativeLayout>